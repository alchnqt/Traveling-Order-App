<UserControl x:Class="FakeAtlas.CustomUIElements.PressButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FakeAtlas.CustomUIElements" d:DataContext="{d:DesignInstance Type=local:PressButton}"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="350">
    <Grid DataContext="{Binding ElementName=root}">
        <Border CornerRadius="3" BorderBrush="CadetBlue" BorderThickness="2"
                    Background="LightBlue" >
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Content="{Binding Path=Text, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type UserControl}}}"
                            
                            FontSize="20" HorizontalContentAlignment="Center">
                <ContentControl.CommandBindings>
                </ContentControl.CommandBindings>
            </ContentControl>
        </Border>
    </Grid>
</UserControl>
