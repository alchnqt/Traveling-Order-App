<UserControl x:Class="FakeAtlas.CustomUIElements.SignUpButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FakeAtlas.CustomUIElements"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100">
    <Grid>
        <Border CornerRadius="3">
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Content="{Binding Path=Text, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type UserControl}}}"
                            FontSize="14" HorizontalContentAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
